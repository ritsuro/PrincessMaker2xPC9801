AS	=	ML
ASFLAGS	=	/VM /I. /Zm /c /Fo$@

NAMEIN.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

MAINLP.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

MNGATE.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

MACLIB.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

WIDNAME.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

WIDBLOOD.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

WIDAGE.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

WIDBORTH.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

JAPAN.OBJ	:	$*.ASM	KINSOKU.INC
	$(AS) $(ASFLAGS) $*.ASM

NAMEIN.COM	:	NAMEIN.OBJ MAINLP.OBJ MNGATE.OBJ MACLIB.OBJ WIDNAME.OBJ WIDBLOOD.OBJ WIDAGE.OBJ WIDBORTH.OBJ JAPAN.OBJ
	OPTLINK @LINKFILE

..\NDOC\NAMEIN.COM	:	$*.COM
	COPY $*.COM $@

