AS	=	ML
ASFLAGS	=	/VM /I. /Zm /c /Fo$@

ENDING.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

MAINLP.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

PRNTEXT.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

EDTTEXT.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

MNGATE.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

MACLIB.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM

ENDING.COM	:	ENDING.OBJ MAINLP.OBJ PRNTEXT.OBJ EDTTEXT.OBJ MNGATE.OBJ MACLIB.OBJ
	OPTLINK @LINKFILE

..\NDOC\ENDING.COM	:	$*.COM
	COPY $*.COM $@

