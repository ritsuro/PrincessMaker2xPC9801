;	CODE01 segment -> CODE segment.

CODE_IN		MACRO
	LOCAL	L1
	JMP	FAR PTR L1
CODE01	ENDS
CODE	SEGMENT	PUBLIC	'CODE'
	ASSUME	CS:CODE,DS:DATA
L1:
	ENDM

;	CODE segment -> CODE01 segment.

CODE_OUT	MACRO
	LOCAL	L1
	JMP	FAR PTR L1
CODE	ENDS
CODE01	SEGMENT	PUBLIC	'CODE01'
	ASSUME	CS:CODE01,DS:DATA
L1:
	ENDM

;	define string -> offset.

STRS	MACRO	RRR,STRING
	LOCAL	L1
DATA	SEGMENT	PUBLIC	'DATA'
	EVEN
L1	DB	STRING,0
	EVEN
DATA	ENDS
	MOV	RRR,OFFSET L1
	ENDM

